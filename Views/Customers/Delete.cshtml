@model CadCustomer.Models.Customer

@{
    ViewData["Title"] = "Deletar Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="text-center">Deletar Customer</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger text-center">Tem certeza de que deseja excluir este registro?</h5>
            <p class="text-center text-muted">Essa ação não pode ser desfeita.</p>

            <dl class="row mt-4">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4">RG</dt>
                <dd class="col-sm-8">@Model.RG?.Insert(2, ".")?.Insert(6, ".")?.Insert(10, "-")</dd>
            </dl>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Excluir</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
