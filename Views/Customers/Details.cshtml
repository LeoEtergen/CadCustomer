@model CadCustomer.Models.Customer

@{
    ViewData["Title"] = "Detalhes do Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="text-center">Detalhes do Cliente</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Model.Nome</dd>

                <dt class="col-sm-4">Data de Nascimento</dt>
                <dd class="col-sm-8">@Model.DataNasc.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">RG</dt>
                <dd class="col-sm-8">@Model.RG?.Insert(2, ".")?.Insert(6, ".")?.Insert(10, "-")</dd>

                <dt class="col-sm-4">Estado Civil</dt>
                <dd class="col-sm-8">@Model.EstadoCivil</dd>

                <dt class="col-sm-4">Logradouro</dt>
                <dd class="col-sm-8">@Model.Logradouro</dd>

                <dt class="col-sm-4">Número</dt>
                <dd class="col-sm-8">@Model.Numero</dd>

                <dt class="col-sm-4">Bairro</dt>
                <dd class="col-sm-8">@Model.Bairro</dd>

                <dt class="col-sm-4">Cidade</dt>
                <dd class="col-sm-8">@Model.Cidade</dd>

                <dt class="col-sm-4">UF</dt>
                <dd class="col-sm-8">@Model.UF</dd>

                <dt class="col-sm-4">País</dt>
                <dd class="col-sm-8">@Model.Pais</dd>

                <dt class="col-sm-4">CEP</dt>
                <dd class="col-sm-8">@Model.CEP?.Insert(5, "-")</dd>

                <dt class="col-sm-4">Nome do Pai</dt>
                <dd class="col-sm-8">@Model.NomePai</dd>

                <dt class="col-sm-4">Nome da Mãe</dt>
                <dd class="col-sm-8">@Model.NomeMae</dd>
            </dl>
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>
